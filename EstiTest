<div id="result"></div>

<script>
  // ESBI 분면에 따른 문항 분류 (5문항씩 배분)
  const categoryMap = {
    q1: 'E', q5: 'E', q9: 'E', q13: 'E', q17: 'E',
    q2: 'B', q6: 'B', q10: 'B', q14: 'B', q18: 'B',
    q3: 'S', q7: 'S', q11: 'S', q15: 'S', q19: 'S',
    q4: 'I', q8: 'I', q12: 'I', q16: 'I', q20: 'I'
  };

  const categoryScores = { E: 0, B: 0, S: 0, I: 0 };

  document.getElementById('quizForm').addEventListener('submit', function(e) {
    e.preventDefault();

    // 점수 초기화
    for (let key in categoryScores) categoryScores[key] = 0;

    // 점수 합산
    const formData = new FormData(this);
    for (const [key, value] of formData.entries()) {
      const cat = categoryMap[key];
      if (cat) categoryScores[cat] += parseInt(value, 10);
    }

    // 최고 점수 카테고리 찾기
    let maxCat = null, maxScore = -1;
    for (const cat in categoryScores) {
      if (categoryScores[cat] > maxScore) {
        maxScore = categoryScores[cat];
        maxCat = cat;
      }
    }

    // 결과 메시지
    const resultTexts = {
      E: '🔒 안정과 확실성을 중시하는 봉급생활자 (Employee) 유형입니다.',
      B: '👔 리더십과 조직 운영에 강한 사업가 (Big Business) 유형입니다.',
      S: '🛠️ 독립적으로 자신의 일을 하는 자영업자 (Self-Employed) 유형입니다.',
      I: '💰 투자와 자산 운용에 집중하는 투자자 (Investor) 유형입니다.'
    };

    document.getElementById('result').textContent = `결과: ${resultTexts[maxCat]}`;
  });
</script>

