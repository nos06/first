<div id="result"></div>

<script>
  // ESBI λ¶„λ©΄μ— λ”°λ¥Έ λ¬Έν•­ λ¶„λ¥ (5λ¬Έν•­μ”© λ°°λ¶„)
  const categoryMap = {
    q1: 'E', q5: 'E', q9: 'E', q13: 'E', q17: 'E',
    q2: 'B', q6: 'B', q10: 'B', q14: 'B', q18: 'B',
    q3: 'S', q7: 'S', q11: 'S', q15: 'S', q19: 'S',
    q4: 'I', q8: 'I', q12: 'I', q16: 'I', q20: 'I'
  };

  const categoryScores = { E: 0, B: 0, S: 0, I: 0 };

  document.getElementById('quizForm').addEventListener('submit', function(e) {
    e.preventDefault();

    // μ μ μ΄κΈ°ν™”
    for (let key in categoryScores) categoryScores[key] = 0;

    // μ μ ν•©μ‚°
    const formData = new FormData(this);
    for (const [key, value] of formData.entries()) {
      const cat = categoryMap[key];
      if (cat) categoryScores[cat] += parseInt(value, 10);
    }

    // μµκ³  μ μ μΉ΄ν…κ³ λ¦¬ μ°ΎκΈ°
    let maxCat = null, maxScore = -1;
    for (const cat in categoryScores) {
      if (categoryScores[cat] > maxScore) {
        maxScore = categoryScores[cat];
        maxCat = cat;
      }
    }

    // κ²°κ³Ό λ©”μ‹μ§€
    const resultTexts = {
      E: 'π”’ μ•μ •κ³Ό ν™•μ‹¤μ„±μ„ μ¤‘μ‹ν•λ” λ΄‰κΈ‰μƒν™μ (Employee) μ ν•μ…λ‹λ‹¤.',
      B: 'π‘” λ¦¬λ”μ‹­κ³Ό μ΅°μ§ μ΄μμ— κ°•ν• μ‚¬μ—…κ°€ (Big Business) μ ν•μ…λ‹λ‹¤.',
      S: 'π› οΈ λ…λ¦½μ μΌλ΅ μμ‹ μ μΌμ„ ν•λ” μμμ—…μ (Self-Employed) μ ν•μ…λ‹λ‹¤.',
      I: 'π’° ν¬μμ™€ μμ‚° μ΄μ©μ— μ§‘μ¤‘ν•λ” ν¬μμ (Investor) μ ν•μ…λ‹λ‹¤.'
    };

    document.getElementById('result').textContent = `κ²°κ³Ό: ${resultTexts[maxCat]}`;
  });
</script>

